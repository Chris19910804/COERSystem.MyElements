# Editor configuration, see https://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
insert_final_newline = false
trim_trailing_whitespace = true

[*.html]
quote_type = single
indent_size = 4

[*.css]
quote_type = single
indent_size = 4

[*.scss]
quote_type = single
indent_size = 4

[*.js]
quote_type = single
indent_size = 4

[*.ts]
quote_type = single
indent_size = 4

[*.md]
max_line_length = off
trim_trailing_whitespace = false
